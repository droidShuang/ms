<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pop_error_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="66dp"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:minWidth="200dp"
        android:text="添加描述" />

    <ImageView
        android:id="@+id/pop_error_iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/storke_imageview"
        android:minHeight="200dp"
        android:minWidth="200dp"
         />


    <Button
        android:id="@+id/pop_error_bt_takephoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/pop_error_iv_photo"
        android:layout_toEndOf="@+id/pop_error_et_describle"
        android:text="+" />

    <Button
        android:id="@+id/pop_error_bt_deletephoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pop_error_iv_photo"
        android:layout_below="@+id/pop_error_iv_photo"
        android:text="-" />

    <Button
        android:id="@+id/pop_error_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pop_error_bt_deletephoto"
        android:layout_below="@+id/linearLayout7"
        android:text="保存" />

    <EditText
        android:id="@+id/pop_error_et_describle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pop_error_bt_takephoto"
        android:layout_alignStart="@+id/pop_error_tx"
        android:layout_below="@+id/pop_error_tx"
        android:layout_marginRight="20dp"
        android:layout_marginTop="29dp"
        android:layout_toStartOf="@+id/pop_error_iv_photo"
        android:background="@drawable/rectangle_et_check"
        android:gravity="start"
        android:paddingLeft="5dp"
        android:inputType="textNoSuggestions|textMultiLine"
        android:paddingRight="5dp"
        android:text="xxxxxxxxx" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_error_bt_deletephoto"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_error_tx_factory"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"

                android:paddingTop="24dp"
                android:text="工厂" />

            <TextView
                android:id="@+id/pop_error_sp_factory"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_spiner"
                android:visibility="gone"

                ></TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_error_tx_section"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="工段" />

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_error_sp_section"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_spiner"

                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:weightSum="1">

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_error_tx_workshop"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="车间" />

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_error_sp_workshop"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_spiner"></TextView>

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_error_tx_class"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="班组" />

            <TextView
                android:visibility="gone"
                android:id="@+id/pop_error_sp_class"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_spiner"

                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/pop_error_tx_user"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="负责人" />

            <TextView
                android:id="@+id/pop_error_sp_user"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_spiner"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>