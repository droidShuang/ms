<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maintain_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.junova.ms.maintain.maintaindetail.MaintainDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maintain_detail_tx_title"
        android:layout_alignParentEnd="true">


        <Button
            android:id="@+id/maintain_detail_bt_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="长期措施"
            android:visibility="gone" />

        <TextView
            android:id="@+id/maintain_detail_tx_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已关闭"
            android:visibility="gone" />

        <Button
            android:id="@+id/maintain_detail_bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="解决"
            android:visibility="gone" />

        <Button
            android:id="@+id/maintain_detail_bt_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="转发"
            android:visibility="gone" />

        <Button
            android:id="@+id/maintain_detail_bt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:visibility="gone" />

        <Button
            android:id="@+id/maintain_detail_bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退回"
            android:visibility="gone" />

        <Button
            android:id="@+id/maintain_detail_bt_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加描述"
            android:visibility="gone" />
    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/maintain_detail_tx_user"
        android:layout_marginTop="8dp"
        android:background="@color/change_psd_line" />

    <TextView
        android:id="@+id/maintain_detail_tx_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view"

        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="content" />

    <TextView
        android:id="@+id/maintain_detail_tx_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/maintain_detail_tx_describe"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="操作记录" />

    <ImageView
        android:id="@+id/maintain_detail_iv_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/maintain_detail_tx_operation"
        android:background="@drawable/storke_imageview" />

    <TextView
        android:id="@+id/maintain_detail_tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignParentEnd="true" />

    <TextView

        android:id="@+id/maintain_detail_tx_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout8"
        android:layout_toStartOf="@+id/maintain_detail_tx_user"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="日期：" />

    <TextView
        android:id="@+id/maintain_detail_tx_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/maintain_detail_tx_time"
        android:layout_alignBottom="@+id/maintain_detail_tx_time"
        android:layout_alignParentEnd="true"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="提交人：" />

    <EditText
        android:id="@+id/maintain_detail_tx_operation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/maintain_detail_tx_1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="39dp"
        android:layout_toStartOf="@+id/maintain_detail_iv_image"
        android:background="@drawable/rectangle_et_check"
        android:editable="false"
        android:maxHeight="300dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="暂无操作"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/maintain_detail_tx_countdowm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text=""
        android:textSize="25sp" />
</RelativeLayout>
