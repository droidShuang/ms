<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:weightSum="1"
    tools:context="com.junova.ms.usercenter.UserCenterActivity">



    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_logo1" />


    <TextView
        android:id="@+id/user_center_tx_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="工号"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="38dp"
        android:background="@color/change_psd_line" />

    <TextView
        android:id="@+id/user_center_tx_chaneg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:drawableRight="@mipmap/ic_arrow_left"

        android:padding="10dp"
        android:text="修改密码"

        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/change_psd_line" />

    <TextView
        android:id="@+id/user_center_tx_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"

        android:drawableRight="@mipmap/ic_arrow_left"

        android:text="退出登录"

        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/change_psd_line" />
</LinearLayout>
