<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="操作规范："
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/pop_tip_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/pop_tip_iv"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
                            xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

    <ImageView
        android:id="@+id/pop_tip_iv"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pop_tip_tx"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
</RelativeLayout>