<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".check.missiondetail.MissionDetailListActivity">


    <TextView
        android:id="@+id/missionlist_tx_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"

        android:text="未验证"
        android:visibility="invisible" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/missionlist_rv_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentBottom="true"

        android:layout_below="@+id/missionlist_tx_verification"
        android:layout_toEndOf="@+id/view_to_check">

    </android.support.v7.widget.RecyclerView>


    <View
        android:id="@+id/view_to_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:clickable="true">

    </View>
</FrameLayout>
