<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:id="@+id/item_detail_child_edt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/edittext_rectangle"
        android:gravity="start"
        android:hint="备注" />

    <TextView

        android:id="@+id/item_detail_child_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_detail_child_edt"
        android:layout_toLeftOf="@+id/item_detail_child_spiner"
        android:text="异常类型：" />

    <Spinner
        android:id="@+id/item_detail_child_spiner"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_detail_child_edt"></Spinner>

    <com.junova.ms.widgt.MyGridView
        android:id="@+id/item_detail_child_gv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_detail_child_tx"
        android:numColumns="3"></com.junova.ms.widgt.MyGridView>

    <Button
        android:id="@+id/item_detail_child_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_detail_child_gv"
        android:layout_centerHorizontal="true"
        android:text="保存" />
</RelativeLayout>