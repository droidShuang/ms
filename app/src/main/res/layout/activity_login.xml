<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:id="@+id/linearLayout9"
        android:layout_marginBottom="105dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@mipmap/defoult_dazhong_logo" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/defoult_lvse_logo" />
    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@mipmap/defoult_man_icon"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/login_sp_factory" />

    <EditText
        android:drawableLeft="@mipmap/defoult_man_icon"
        android:id="@+id/login_edt_userid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_et_height"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_rectangle"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@mipmap/defoult_key_icon"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:drawableLeft="@mipmap/defoult_key_icon"
        android:id="@+id/login_edt_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_et_height"
        android:background="@drawable/edittext_rectangle"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignEnd="@+id/login_edt_userid"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:id="@+id/login_bt_login"

        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/login"
        android:textColor="@color/md_blue_900"
        android:textSize="20sp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/login_sp_choose"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/login_sp_factory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/stroke_spiner"
        android:gravity="center"
        android:onClick="onClick"
        android:text="选择工厂"
        android:visibility="gone"
        android:layout_below="@+id/login_edt_psw"
        android:layout_centerHorizontal="true" />
    <Spinner

        android:id="@+id/login_sp_choose"
        android:entries="@array/factoryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/login_edt_psw"
        android:layout_alignEnd="@+id/login_edt_psw"
        android:layout_alignStart="@+id/login_edt_psw"></Spinner>
</RelativeLayout>
