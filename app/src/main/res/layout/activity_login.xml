<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:id="@+id/linearLayout9"

        android:layout_marginBottom="93dp"
        android:layout_above="@+id/login_edt_userid"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@mipmap/defoult_dazhong_logo" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/defoult_lvse_logo" />
    </LinearLayout>


    <EditText
        android:drawableLeft="@mipmap/defoult_man_icon"
        android:id="@+id/login_edt_userid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_et_height"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_rectangle"
        android:paddingLeft="10dp"
        android:drawablePadding="8dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:layout_above="@+id/login_edt_psw"
        android:layout_centerHorizontal="true" />


    <EditText
        android:drawableLeft="@mipmap/defoult_key_icon"
        android:id="@+id/login_edt_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_et_height"
        android:background="@drawable/edittext_rectangle"
        android:ems="10"
        android:drawablePadding="8dp"

        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/login_sp_choose"
        android:layout_alignStart="@+id/login_edt_userid"
        android:layout_alignEnd="@+id/login_edt_userid" />

    <Button
        android:id="@+id/login_bt_login"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/md_white_1000"
        android:textSize="16sp"
        android:background="@drawable/bt_bg"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/login_sp_choose"
        android:layout_alignEnd="@+id/login_sp_choose" />


    <Spinner

        android:id="@+id/login_sp_choose"
        android:entries="@array/factoryList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/login_bt_login"
        android:layout_marginBottom="60dp"
        android:layout_alignStart="@+id/login_edt_psw"
        android:layout_alignEnd="@+id/login_edt_psw"></Spinner>
</RelativeLayout>
