<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_mission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"


    tools:context="com.junova.ms.check.missiontable.GetMissionActivity">

    <TextView
        android:id="@+id/getmission_sp_model"


        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/textView"
        android:background="@drawable/stroke_spiner"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

    </TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/getmission_sp_model"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/getmission_sp_model"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="@string/work_shop"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="@string/manger_model"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/getMission_sp_workshop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/stroke_spiner"
        android:paddingBottom="16dp"

        android:paddingTop="24dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="21dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="@string/section"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/getmission_sp_section"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/getmission_sp_model"
        android:layout_alignTop="@+id/textView3"
        android:background="@drawable/stroke_spiner"
        android:entries="@array/leader"
        android:paddingBottom="16dp"
        android:paddingTop="24dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/getmission_sp_class"
        android:layout_alignStart="@+id/textView2"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="@string/work_class"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/getmission_sp_class"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/getmission_sp_section"
        android:layout_alignTop="@+id/getmission_sp_section"
        android:layout_toEndOf="@+id/textView4"
        android:background="@drawable/stroke_spiner"
        android:paddingBottom="16dp"
        android:paddingTop="24dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/getmission_sp_model"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="任务列表" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/getmission_rv_mission"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</RelativeLayout>
