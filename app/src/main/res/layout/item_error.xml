<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/code_btn"
    android:padding="12dp">

    <TextView
        android:id="@+id/item_tx_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="1." />

    <TextView
        android:id="@+id/item_tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_tx_index"
        android:text="title" />

    <TextView

        android:id="@+id/item_tx_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_tx_title"
        android:text="user" />

    <TextView
        android:id="@+id/item_tx_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_tx_title"
        android:layout_below="@+id/item_tx_title"
        android:text="date"

        />
</RelativeLayout>