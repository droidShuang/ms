<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_300"
    android:orientation="vertical">

    <EditText
        android:id="@+id/pop_error_et_describle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pop_error_iv_photo"
        android:layout_alignStart="@+id/pop_error_tx"
        android:layout_below="@+id/pop_error_tx"
        android:layout_marginRight="20dp"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@+id/pop_error_iv_photo"
        android:background="@drawable/rectangle_et_check"
        android:gravity="start"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="textNoSuggestions|textMultiLine"
        android:text="xxxxxxxxx" />

    <TextView
        android:id="@+id/pop_error_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="66dp"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:minWidth="200dp"
        android:text="添加描述" />

    <ImageView
        android:id="@+id/pop_error_iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/storke_imageview"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:padding="5dp"
    />

    <TextView
        android:id="@+id/pop_error_tx_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/pop_error_bt_save"
        android:layout_alignStart="@+id/pop_error_et_describle"
        android:minWidth="60dp"
        android:text="类型" />

    <TextView
        android:id="@+id/pop_error_sp_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_spiner"
        android:minWidth="100dp"
        android:spinnerMode="dialog"
        android:layout_alignBaseline="@+id/pop_error_tx_kind"
        android:layout_alignBottom="@+id/pop_error_tx_kind"
        android:layout_toEndOf="@+id/pop_error_tx_kind">

    </TextView>

    <Button
        android:id="@+id/pop_error_bt_takephoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_error_iv_photo"

        android:layout_toEndOf="@+id/pop_error_et_describle"
        android:text="+" />

    <Button
        android:id="@+id/pop_error_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pop_error_iv_photo"
        android:layout_below="@+id/pop_error_bt_takephoto"
        android:layout_marginEnd="55dp"
        android:text="保存" />

    <Button
        android:id="@+id/pop_error_bt_deletephoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pop_error_iv_photo"
        android:layout_below="@+id/pop_error_iv_photo"
        android:text="-" />
</RelativeLayout>