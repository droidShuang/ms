<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    tools:context=".main.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignStart="@+id/relativeLayout">

    </LinearLayout>


    <!--<View-->
    <!--android:id="@+id/main_bt_maintain"-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="70dp"-->
    <!--android:layout_above="@+id/main_bt_statistics"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:background="@drawable/main_bt_selector"-->
    <!--android:onClick="onClick" />-->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@mipmap/home_title_bg"
        android:layout_below="@+id/cardView"
        android:layout_alignParentEnd="true" />

    <LinearLayout

        android:id="@+id/layout_user"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/main_iv_logo"
        android:layout_marginTop="19dp"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_alignEnd="@+id/main_iv_logo2">

        <LinearLayout
            android:id="@+id/layout_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/main_tx_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxxxxxxx"
                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size"  />

            <TextView
                android:id="@+id/main_tx_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxxxxxxx"

                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门："
                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size" />

            <TextView
                android:id="@+id/main_tx_user_party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxxxxxxxxxxxxxxx"

                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size" />
        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/linearLayout6"

        android:layout_width="@dimen/main_artical_width"
        android:layout_height="@dimen/main_artical_height"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView5"
        android:layout_marginBottom="82dp"
        android:layout_marginTop="17dp"
        android:background="@mipmap/home_act_bg"
        >

        <ImageView
            android:id="@+id/main_bt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="14dp"
            android:background="@mipmap/home_act_yuandian"


           />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_rv_article"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/main_bt_more"

            android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    <LinearLayout

        android:id="@+id/linearLayout5"
        android:layout_width="145.5dp"
        android:layout_height="120dp"

        android:background="@mipmap/home_btn_bg"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/linearLayout6">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_bt_check"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_menu_height"
                android:background="@drawable/main_bt_selector"
                android:gravity="center"
                android:onClick="onClick"
                android:text="任务点检"
                android:textColor="@color/white"
                android:textSize="@dimen/main_menu_txsize"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:padding="2dp"
                android:id="@+id/main_tx_checknum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginEnd="2dp"
                android:background="@mipmap/home_xiaoxi"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_bt_maintain"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_menu_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/main_bt_selector"
                android:gravity="center"
                android:onClick="onClick"
                android:text="任务维修"
                android:textColor="@color/white"
                android:textSize="@dimen/main_menu_txsize" />

            <TextView
                android:padding="2dp"
                android:id="@+id/main_tx_maintainnum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginEnd="2dp"
                android:background="@mipmap/home_xiaoxi"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_bt_statistics"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/main_menu_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/main_bt_selector"
                android:gravity="center"
                android:onClick="onClick"
                android:text="查询统计"
                android:textColor="@color/white"
                android:textSize="@dimen/main_menu_txsize" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignParentRight="true"

        android:layout_margin="5dp"
        android:id="@+id/relativeLayout">

        <TextView

            android:id="@+id/main_tx_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/main_iv_user"
            android:text="12月16号"
            android:textColor="@color/md_white_1000" />

        <TextView
            android:id="@+id/main_tx_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/main_tx_date1"
            android:layout_below="@+id/main_tx_date1"
            android:text="星期五"
            android:textColor="@color/md_white_1000" />

        <ImageView
            android:id="@+id/main_iv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_user" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/main_iv_logo2"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@mipmap/defoult_lvse_logo"
        android:layout_above="@+id/layout_user"
        android:layout_toEndOf="@+id/main_iv_logo"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="9dp" />

    <ImageView

        android:id="@+id/main_iv_logo"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:src="@mipmap/defoult_dazhong_logo"
        android:layout_below="@+id/imageView5"
        android:layout_toEndOf="@+id/cardView" />

</RelativeLayout>
