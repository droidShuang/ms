<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_mission_view"
    style="@style/MyCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView

            android:id="@+id/item_mission_tx_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="1.Hello World!"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/item_mission_tx_date"
                style="?android:dateTextAppearance"
                android:layout_width="418dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:gravity="right"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="任务下发日期：xxxxxxx"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatCheckBox

                android:id="@+id/item_mission_cb"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="end" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>