<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/md_grey_300">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:text="选择转发人"

        android:textColor="@color/black" />

    <TextView
        android:id="@+id/pop_transpond_sp_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/stroke_spiner"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="用户"
        android:layout_alignParentEnd="true">

    </TextView>

    <Button
        android:id="@+id/pop_transpond_bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pop_transpond_sp_user"
        android:layout_below="@+id/pop_transpond_sp_user"
        android:layout_marginStart="74dp"
        android:layout_marginTop="25dp"
        android:text="取消" />

    <Button
        android:id="@+id/pop_transpond_bt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_alignBaseline="@+id/pop_transpond_bt_cancel"
        android:layout_alignBottom="@+id/pop_transpond_bt_cancel"
        android:layout_toEndOf="@+id/pop_transpond_bt_cancel" />
</RelativeLayout>