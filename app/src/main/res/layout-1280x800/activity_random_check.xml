<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_random_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="54dp"
    android:paddingRight="54dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.junova.ms.check.sportcheck.RandomCheckActivity">

    <EditText
        android:id="@+id/random_edt_first"
        android:layout_width="500dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="15dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingTop="25dp"
        android:text="1.Hello World!"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/edittext_rectangle"
            android:id="@+id/random_edt_describetion"
            android:layout_width="272dp"
            android:layout_height="207dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="start" />

        <ImageView
            android:background="@drawable/storke_imageview"
            android:id="@+id/random_rv_image"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/random_bt_add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/random_rv_image"
            android:layout_below="@+id/random_rv_image"
            android:text="+"
            android:textSize="24sp" />
    </RelativeLayout>

    <Spinner
        android:entries="@array/leader"
        android:layout_width="272dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"></Spinner>

    <Spinner
        android:entries="@array/leader"
        android:layout_width="272dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"></Spinner>

    <Spinner
        android:entries="@array/leader"
        android:layout_width="272dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"></Spinner>

    <Spinner
        android:entries="@array/leader"
        android:layout_width="272dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"></Spinner>

    <Spinner
        android:entries="@array/leader"
        android:id="@+id/spinner"
        android:layout_width="272dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交" />
    </LinearLayout>
</LinearLayout>
