<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_random_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.junova.ms.check.sportcheck.RandomCheckActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/random_mission_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/random_layout_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/random_edt_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/edittext_rectangle"
            android:paddingBottom="15dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="25dp"

            android:textColor="@color/black"

            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/random_edt_describetion"
                android:layout_width="272dp"
                android:layout_height="207dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edittext_rectangle"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:layout_toStartOf="@+id/random_rv_image"
                android:layout_above="@+id/random_bt_add" />

            <ImageView
                android:id="@+id/random_rv_image"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/storke_imageview" />

            <Button
                android:id="@+id/random_bt_delete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/random_bt_add"
                android:layout_alignBottom="@+id/random_bt_add"
                android:layout_alignParentEnd="true"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/random_bt_add"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/random_rv_image"
                android:layout_below="@+id/random_rv_image"
                android:text="+"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/random_sp_factory"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_spiner"
        android:text="工厂"></TextView>

    <TextView
        android:id="@+id/random_sp_shop"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_spiner"
        android:text="车间"></TextView>

    <TextView
        android:id="@+id/random_sp_section"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_spiner"
        android:text="工段"></TextView>

    <TextView
        android:id="@+id/random_sp_class"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_spiner"
        android:text="班组"></TextView>

    <TextView
        android:id="@+id/random_sp_user"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_spiner"
        android:text="负责人"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/random_bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:theme="@style/MyFlatButton" />

        <Button
            android:id="@+id/random_bt_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:theme="@style/MyFlatButton" />
    </LinearLayout>
</LinearLayout>
