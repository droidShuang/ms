<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sport_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.junova.ms.check.sportcheck.SportCheckActivity">


    <LinearLayout
        android:id="@+id/sportcheck_layout_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"

        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="4">

            <TextView

                android:id="@+id/sportcheck_tx_model"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="管理模块" />

            <TextView
                android:id="@+id/sportcheck_sp_model"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:background="@drawable/stroke_spiner"></TextView>

            <TextView
                android:id="@+id/sportcheck_tx_factory"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="工厂" />

            <TextView
                android:id="@+id/sportcheck_sp_factory"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:background="@drawable/stroke_spiner"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sportcheck_tx_workshop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="车间" />

            <TextView

                android:id="@+id/sportcheck_sp_workshop"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:background="@drawable/stroke_spiner"></TextView>

            <TextView
                android:id="@+id/sportcheck_tx_section"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="工段" />

            <TextView
                android:id="@+id/sportcheck_sp_section"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:background="@drawable/stroke_spiner">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/sportcheck_tx_class"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="班组" />

            <TextView
                android:id="@+id/sportcheck_sp_class"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:background="@drawable/stroke_spiner"></TextView>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sportcheck_layout_condition"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/md_grey_400"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"
            android:text="任务列表" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sportcheck_rv_mission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>
